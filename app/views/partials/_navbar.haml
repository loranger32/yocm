%nav.navbar.navbar-expand-md.navbar-dark.bg-dark.mb-3.mb-xxl-4
  .container-fluid
    %a.navbar-brand{href: "/"}
      %img{src: "/images/layer.png", alt: "Yocm Logo", width: "24", height: "19", class: "d-inline-block align-text-top"}
      Yocm
    %button.navbar-toggler{type: "button", "data-bs-toggle" => "collapse", "data-bs-target" => "#navbarToggler01",
      "aria-controls" => "navbarToggler01", "aria-expanded" => false, "aria-label" => "Toggle navigation"}
      %span.navbar-toggler-icon

    .collapse.navbar-collapse#navbarToggler01
      %ul.navbar-nav.me-auto.mb-2.mb-sm-0
        %li.nav-item
          %a.nav-link{href: "/publications"} Publications
        %li.nav-item
          %a.nav-link{href: "/users/results"} Results
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle#navbarDropdownUsers{href: "#", role: "button", "data-bs-toggle" => "dropdown", "aria-expanded" => false} Users
          %ul.dropdown-menu{"aria-labelledby" => "navbarDropdownUsers"}
            %li
              %a.dropdown-item{href: "/users"} All Users
            %li
              %hr.dropdown-divider
            - if @active_user
              %li
                %a.dropdown-item{href: "/users/#{@active_user.id}"}
                  Current User
                  %br
                  %span.small (#{@active_user.email})
            - else
              %li
                %a.dropdown-item.disabled{href: "#"}
                  No Active User
        %li.nav-item.dropdown
          %a.nav-link.dropdown-toggle#navbarDropdownData{href: "#", role: "button", "data-bs-toggle" => "dropdown", "aria-expanded" => false} Data
          %ul.dropdown-menu{"aria-labelledby" => "navbarDropdownData"}
            %li
              %a.dropdown-item{href: "/search", target: :blank} Search CBE data
            %li
              %a.dropdown-item{href: "/zipcodes", target: :blank} Search zip codes
            %li
              %hr.dropdown-divider
            %li
              %a.dropdown-item{href: "/cbe-data"} CBE data status
        %li.nav-item
          %a.nav-link{href: "/about"} About
    - if @active_user
      %a.navbar-text{href: "/users/#{@active_user.id}"}= @active_user.email
    - else
      %p.text-white No active user
